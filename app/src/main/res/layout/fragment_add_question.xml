<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jvelez.questioner.AddQuestionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Haz una pregunta!"
        android:textSize="26sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/textView"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:id="@+id/nameEditText"
            android:hint="Tu nombre"
            android:textAlignment="center"
            android:gravity="center"
            android:ellipsize="start"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:id="@+id/temaEditText"
            android:hint="Escribe el tema"
            android:textAlignment="center"
            android:gravity="center"
            android:ellipsize="start"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:id="@+id/questionEditText"
            android:textAlignment="center"
            android:ellipsize="start"
            android:gravity="center"
            android:ems="10"
            android:hint="Escribe aquí tu pregunta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="70dp"
        android:text="Preguntar"
        android:id="@+id/questionButton"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</LinearLayout>
